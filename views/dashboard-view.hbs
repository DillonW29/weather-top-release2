{{> menu active="dashboard"}}

<<h1>Welcome, {{user.firstName}}</h1>

<form action="/dashboard/addstation" method="POST">
  <input name="name" placeholder="Station Name" required />
  <input name="latitude" placeholder="Latitude" step="0.01" required />
  <input name="longitude" placeholder="Longitude" step="0.01" required />
  <button type="submit">Add Station</button>
</form>

<ul>
  {{#each stations}}
    <li>{{name}} ({{latitude}}, {{longitude}})</li>
  {{else}}
    <li>No stations yet.</li>
  {{/each}}
</ul>
